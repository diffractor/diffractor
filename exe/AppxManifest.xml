<?xml version="1.0" encoding="utf-8"?>
<Package
  xmlns="http://schemas.microsoft.com/appx/manifest/foundation/windows10"
  xmlns:uap="http://schemas.microsoft.com/appx/manifest/uap/windows10"
  xmlns:rescap="http://schemas.microsoft.com/appx/manifest/foundation/windows10/restrictedcapabilities"
  xmlns:desktop="http://schemas.microsoft.com/appx/manifest/desktop/windows10"
  IgnorableNamespaces="uap rescap desktop">

  <!--
  ===============================================================================================================
  IDENTITY
  - Name: A unique identifier for your package. A common convention is PublisherName.AppName.
  - Publisher: This MUST match the subject of the certificate you use to sign the package (e.g., "CN=Zac Walker").
             The value below is a placeholder. You must replace it.
  - Version: A four-part version number. Mapped from your FILE_VERSION define.
  - ProcessorArchitecture: Set to x64 or x86 depending on the build. You would create separate packages for each
    and then combine them into a single .msixbundle.
  ===============================================================================================================
  -->
  <Identity
    Name="Diffractor.Diffractor"
    Publisher="CN=PUBLISHER_ID_PLACEHOLDER"
    Version="1.26.1.1185"
    ProcessorArchitecture="x64" />

  <!--
  ===============================================================================================================
  PROPERTIES
  - DisplayName: The user-friendly name for your app. From PRODUCT_NAME.
  - PublisherDisplayName: The name of the publisher to display to users. From PRODUCT_PUBLISHER.
  - Logo: The path to your Store logo. You will need to create various image assets.
  ===============================================================================================================
  -->
  <Properties>
    <DisplayName>Diffractor</DisplayName>
    <PublisherDisplayName>Diffractor</PublisherDisplayName>
    <Logo>Assets\StoreLogo.png</Logo>
    <Description>Superfast searching, viewing and comparing of photos or videos.</Description>
  </Properties>

  <!--
  ===============================================================================================================
  DEPENDENCIES
  - TargetDeviceFamily: Specifies that this is a desktop app.
  - MinVersion: The minimum version of Windows 10 required. 10.0.17763.0 is version 1809, the first
    version with official MSIX support.
  ===============================================================================================================
  -->
  <Dependencies>
    <TargetDeviceFamily Name="Windows.Desktop" MinVersion="10.0.17763.0" MaxVersionTested="10.0.22621.0" />
  </Dependencies>

  <!--
  ===============================================================================================================
  RESOURCES
  - Language: Specifies the languages your app supports, taken from your NSIS script.
    The manifest uses BCP-47 codes (e.g., "de" instead of 1031).
  ===============================================================================================================
  -->
  <Resources>
    <Resource Language="EN-US"/>
    <Resource Language="DE"/>
    <Resource Language="IT"/>
    <Resource Language="JA"/>
    <Resource Language="ES"/>
  </Resources>

  <!--
  ===============================================================================================================
  APPLICATION
  - Defines the app itself, its entry point, and its visual elements.
  ===============================================================================================================
  -->
  <Applications>
    <Application Id="App"
      Executable="diffractor64.exe"
      EntryPoint="Windows.FullTrustApplication">

      <!--
      ===============================================================================================================
      VISUAL ELEMENTS
      - Defines how your app appears in the Start Menu and other parts of the Windows shell.
      - You will need to create these PNG assets from your Diffractor.ico file. Visual Studio can help with this.
      ===============================================================================================================
      -->
      <uap:VisualElements
        DisplayName="Diffractor"
        Description="Superfast searching, viewing and comparing of photos or videos."
        BackgroundColor="transparent"
        Square150x150Logo="Assets\Square150x150Logo.png"
        Square44x44Logo="Assets\Square44x44Logo.png">
        <uap:DefaultTile Wide310x150Logo="Assets\Wide310x150Logo.png" />
        <uap:SplashScreen Image="Assets\SplashScreen.png" />
      </uap:VisualElements>

      <!--
      ===============================================================================================================
      EXTENSIONS
      - This section declares integrations with the Windows shell, such as file associations and context menus.
      ===============================================================================================================
      -->
      <Extensions>
        <!-- Registers the file types your application can open. This replaces your registry writes. -->
        <uap:Extension Category="windows.fileTypeAssociation">
          <uap:FileTypeAssociation Name="diffractor">
            <uap:DisplayName>Diffractor Media</uap:DisplayName>
            <uap:Logo>Assets\DiffractorFile.png</uap:Logo>
            <uap:SupportedFileTypes>
              <uap:FileType>.jpe</uap:FileType>
              <uap:FileType>.jpeg</uap:FileType>
              <uap:FileType>.jpg</uap:FileType>
              <uap:FileType>.png</uap:FileType>
              <uap:FileType>.gif</uap:FileType>
              <uap:FileType>.mp4</uap:FileType>
              <uap:FileType>.mov</uap:FileType>
              <uap:FileType>.avi</uap:FileType>
              <uap:FileType>.mp3</uap:FileType>
              <uap:FileType>.cr2</uap:FileType>
              <uap:FileType>.cr3</uap:FileType>
              <uap:FileType>.webp</uap:FileType>
            </uap:SupportedFileTypes>
          </uap:FileTypeAssociation>
        </uap:Extension>

        <!-- Enable full trust process capability for Win32 application -->
        <desktop:Extension Category="windows.fullTrustProcess" Executable="diffractor64.exe" />
        
      </Extensions>

    </Application>
  </Applications>

  <!--
  ===============================================================================================================
  CAPABILITIES
  - Declares required permissions. runFullTrust is necessary for Win32 applications.
  ===============================================================================================================
  -->
  <Capabilities>
    <rescap:Capability Name="runFullTrust" />
  </Capabilities>
</Package>
